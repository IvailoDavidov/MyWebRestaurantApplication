@using Microsoft.AspNetCore.Identity
@using MyWebRestaurantApplication.Data.Models
@model IEnumerable<UserMealsViewModel>
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager



@if (!Model.Any())
{
    <div class="row container">
    <div class="col-md-6 offset-3 alert alert-primary text-center mt-5">
        <h2>You dont have any products yet</h2>
        <h4>Check our Gallery</h4>
        <a href="/Home/Gallery" class="button-w3ls mt-5">Gallery</a>       
    </div>
</div>
}
else
{
    <div class="row">
        @foreach (var meal in Model)
        {
            <div class="col-md-4 mt-5">
                <div class="card h-50" style="width: 20rem;">
                    <img class="card-img-top" src="@meal.PictureUrl" alt="@meal.Id" >
                    <div class="card-body">
                        <p class="card-text">
                            @meal.Name - @meal.Price x @meal.Count
                            
                            <ul>
                                @foreach (var ingredient in @meal.Ingredients)
                                {
                                    <li>@ingredient.Name</li>
                                }
                            </ul>
                        </p>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                @if (SignInManager.IsSignedIn(User) & !User.IsInRole("Administrator"))
                                {
                                    <a class="btn btn-outline-danger fa-long-arrow-alt-right" asp-controller="User" asp-action="RemoveProduct" asp-route-id="@meal.Id">
                                        <i class="bi bi-eye-fill"></i> Remove (Price $ -@meal.Price)
                                    </a>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="button-div">
        <a href="/Cart/Total" class="btn btn-outline-success btn-lg btn-block">Continue</a>        
    </div>
}